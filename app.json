{
  "name": "Telegram Telethon Bot",
  "description": "A Telegram bot built with Telethon, deployed on Heroku.",
  "repository": "https://github.com/TharushaPro/telegram-telethon-bot",
  "logo": "https://github.com/TharushaPro/telegram-telethon-bot/blob/main/logo.png",
  "keywords": ["python", "telegram", "telethon", "bot"],
  "env": {
    "TELEGRAM_API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "TELEGRAM_API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram Bot Token from BotFather",
      "required": true
    },
    "TELEGRAM_RECIPIENT": {
      "description": "Recipient's username or user ID to receive notifications",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "python app.py"
  }
}
